{
    "manifest_version": 2,
    "name": "CSX Solutions",
    "description": "Shows solutions to CSX problems",
    "version": "1.0.0",
    "background": {
      "service_worker": "background.js"
      },
    "icons": {
      "128": "images/csxsolutions2.JPG"
    },
    "page_action": {
      "default_icon": {
        "128": "images/csxsolutions2.JPG"
        }
      },
    "permissions": [
        "activeTab",
        "tabs"
        ],
    "web_accessbile_resources": ["index.html"],
    "content_scripts": [{
      "matches": ["https://csx.codesmith.io/*"],
      "js": ["solutions.js"] 
      }]
    
}
